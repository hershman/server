-extends "base.haml"
-block body
  %h1 << Beacon
  %form action="search" method="post"
    %table border="1" style="width:300px"
      %tbody
        %tr
          %td << Population
          %td
            %select name="population"
              -for variant_set in variant_sets:
                %option value="{{ variant_set }}"
                  {{ variant_set }}
        %tr
          %td << Genome
          %td
            %select name="genome"
              %option value="GRCh37"
                GRCh37
        %tr
          %td << Chromosome
          %td
            %select name="chr"
              -for chrom in range(1,22):
                %option value="{{ chrom }}"
                  {{ chrom }}
              %option value="22" selected
                22
        %tr
          %td << Coordinate
          %td
            %input type="text" name="coord" size="10" value=16265064
            %br
        %tr
          %td << Allele
          %td
            %input type="text" name="allele" size="30" value="G"
    %br
    %input type="submit" value="Submit"
  %p
  %h5 << Example queries
